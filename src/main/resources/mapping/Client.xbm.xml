<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ua.profitsoft.strymeneshenko.data">
    <class name="Client" table="client">
        <id name="id" type="java.lang.Long" column="id">
            <generator class="native"/>
        </id>
        <discriminator column="CLIENT_TYPE" type="java.lang.String"/>
        <property name="adress" type="java.lang.String">
            <column name="adress" not-null="true"/>
        </property>
        <subclass name="Individual" discriminator-value="Individual">
            <property name="firstName" column="firstName"/>
            <property name="lastName" column="lastName"/>
        </subclass>
        <subclass name="LegalEntity" discriminator-value="LegalEntity">
            <property name="nameOrganization" column="nameOrganization"/>
        </subclass>
    </class>
</hibernate-mapping>